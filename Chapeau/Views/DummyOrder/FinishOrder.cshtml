@model Chapeau.ViewModels.FinishOrderViewModel

<h2>Finish Order</h2>

<form asp-action="FinishOrder" method="post">
    <input type="hidden" asp-for="OrderID" />

    <div>
        <label>Amount Paid (€)</label>
        <input asp-for="AmountPaid" type="number" step="0.01" required />
    </div>

    <div>
        <label>Tip Amount (€)</label>
        <input asp-for="TipAmount" type="number" step="0.01" />
    </div>

    <div>
        <label>Payment Type</label>
        <select asp-for="PaymentType" required>
            <option value="">-- Select --</option>
            <option>Cash</option>
            <option>Debit Card</option>
            <option>Credit Card</option>
        </select>
    </div>

    <div>
        <label>Low VAT Amount (€)</label>
        <input asp-for="LowVatAmount" type="number" step="0.01" required />
    </div>

    <div>
        <label>High VAT Amount (€)</label>
        <input asp-for="HighVatAmount" type="number" step="0.01" required />
    </div>

    <div>
        <label>Feedback (optional)</label>
        <textarea asp-for="Feedback" rows="4" cols="50"></textarea>
    </div>

    <a asp-controller="Order" asp-action="SplitBill" asp-route-orderId="@Model.OrderID" class="btn btn-primary">
        Split Bill
    </a>


    <a href="@Url.Action("Confirmation", "Order")" class="btn btn-primary">Confirm Payment</a>





</form>


