@{
}
@model IEnumerable<Chapeau.Models.Order>

<h2>Orders</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Order</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Employee</th>
            <th>Table Number</th>
            <th>Order Time</th>
            <th>Is Served</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.Employee?.employeeName</td>
                <td>@order.Table?.TableNumber</td>
                <td>@order.OrderTime</td>
                <td>@order.IsServed</td>
            </tr>
        }
    </tbody>
</table>
