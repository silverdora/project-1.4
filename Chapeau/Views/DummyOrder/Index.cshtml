@{
}
@model IEnumerable<Chapeau.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Employee</th>
            <th>Table</th>
            <th>Order Time</th>
            <th>Status</th>
            <th>Is Served</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.Employee?.employeeName</td>
                <td>@order.Table?.TableNumber</td>
                <td>@order.OrderTime.ToString("g")</td>
                <td>@order.Status</td>
                <td>@(order.IsServed ? "Yes" : "No")</td>
                <td><a href="@Url.Action("Details", "Order", new { id = order.OrderID })">View</a></td>
            </tr>
        }
    </tbody>
</table>

