@{
}
@model Chapeau.Models.Payment

@{
    ViewData["Title"] = "Confirm Payment";
}

<h2>Confirm Payment</h2>

<div class="card p-3 shadow-sm">
    <p><strong>Order ID:</strong> @Model.orderID</p>
    <p><strong>Total Amount:</strong> €@Model.amountPaid.ToString("0.00")</p>

    <form method="post" asp-action="CompletePayment">
        <input type="hidden" asp-for="orderID" />
        <input type="hidden" asp-for="amountPaid" />
        <button type="submit" class="btn btn-success">Confirm & Pay</button>
        <a asp-controller="RunningOrders" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

