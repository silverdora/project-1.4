@{
}
@model Chapeau.ViewModels.OrderSummaryViewModel

<h2>Order for Table @Model.TableNumber</h2>

<table class="table">
    <thead>
        <tr>
            <th>Item</th>
            <th>Qty</th>
            <th>Unit Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C2")</td>
                <td>@item.TotalPrice.ToString("C2")</td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Total:</strong> @Model.TotalAmount.ToString("C2")</p>
<p><strong>VAT:</strong> @(Math.Round(Model.LowVAT + Model.HighVAT, 2).ToString("C2"))</p>

<div class="mt-3">
    <a asp-action="FinishOrder" asp-route-orderId="@Model.OrderID" class="btn btn-primary">Proceed to Payment</a>
</div>