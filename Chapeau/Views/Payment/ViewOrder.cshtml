@{
}
@model Chapeau.Models.OrderViewModel <!-- You will need to create this ViewModel -->

@{
    ViewData["Title"] = "View & Complete Order";
}

<div class="container mt-5">
    <h2>Order for Table @Model.TableNumber</h2>

    <table class="table table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Item</th>
                <th>Quantity</th>
                <th>Price (€)</th>
                <th>Total (€)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("F2")</td>
                    <td>@(item.Price * item.Quantity).ToString("F2")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="form-group">
                <label>Payment Method</label>
                <select class="form-control" asp-for="paymentType">
                    <option>Cash</option>
                    <option>Card</option>
                    <option>Pin</option>
                </select>
            </div>

            <div class="form-group">
                <label>Tip (€)</label>
                <input type="number" asp-for="tipAmount" class="form-control" min="0" step="0.01" />
            </div>

            <input type="hidden" asp-for="orderID" />

            <button type="submit" class="btn btn-success mt-3" formaction="/Payment/FinishOrder" formmethod="post">Finish Order & Pay</button>
        </div>

        <div class="col-md-6">
            <h4>Summary</h4>
            <p><strong>Total:</strong> €@Model.TotalAmount.ToString("F2")</p>
            <p><strong>Low VAT:</strong> €@Model.LowVATAmount.ToString("F2")</p>
            <p><strong>High VAT:</strong> €@Model.HighVATAmount.ToString("F2")</p>
        </div>
    </div>
</div>

