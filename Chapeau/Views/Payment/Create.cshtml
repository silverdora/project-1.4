@model Chapeau.Models.Payment

<h2>Complete Payment for Order @Model.OrderID</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="OrderID" />

    <div class="form-group">
        <label>Amount Paid (€):</label>
        <input asp-for="AmountPaid" class="form-control" type="number" step="0.01" required />
    </div>

    <div class="form-group">
        <label>Tip (€):</label>
        <input asp-for="TipAmount" class="form-control" type="number" step="0.01" value="0.00" />
    </div>

    <div class="form-group">
        <label>Payment Type:</label>
        <select asp-for="PaymentType" class="form-control" required>
            <option value="">Select payment type</option>
            <option value="Cash">Cash</option>
            <option value="Card">Card</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Finish Payment</button>
    <a asp-controller="Orders" asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>

