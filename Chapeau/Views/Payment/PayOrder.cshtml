@model Chapeau.Models.Payment

<h2>Complete Payment for Order @Model.orderID</h2>

<form asp-action="PayOrder" method="post">
    <input type="hidden" asp-for="orderID" />
    <input type="hidden" asp-for="paymentDAte" />

    <div class="mb-3">
        <label asp-for="paymentType" class="form-label">Payment Type</label>
        <select asp-for="paymentType" class="form-select" required>
            <option value="">-- Select --</option>
            <option value="Cash">Cash</option>
            <option value="Card">Card</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="amountPaid" class="form-label">Amount Paid</label>
        <input asp-for="amountPaid" class="form-control" type="number" step="0.01" required />
    </div>

    <div class="mb-3">
        <label asp-for="tipAmount" class="form-label">Tip Amount</label>
        <input asp-for="tipAmount" class="form-control" type="number" step="0.01" />
    </div>

    <div class="mb-3">
        <label asp-for="lowVATAmount" class="form-label">Low VAT Amount</label>
        <input asp-for="lowVATAmount" class="form-control" type="number" step="0.01" />
    </div>

    <div class="mb-3">
        <label asp-for="highVATAmount" class="form-label">High VAT Amount</label>
        <input asp-for="highVATAmount" class="form-control" type="number" step="0.01" />
    </div>

    <button type="submit" class="btn btn-success">Complete Payment</button>
</form>

