@model Chapeau.ViewModels.OrderDetailsViewModel

<h2>Order Details</h2>

@if (Model == null || Model.Items == null || Model.Items.Count == 0)
{
    <p>No items selected yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Status</th>
                <th>Waiting Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.MenuItem.Item_name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Status</td>
                    <td>@item.WaitingTime.Minutes min</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Button to submit items to DB -->
    <form asp-controller="Order" asp-action="AddItemsToOrder" method="post">
        <input type="hidden" name="orderId" value="@Model.OrderID" />
        <button type="submit" class="btn btn-success">Submit Order to Kitchen</button>
    </form>
}