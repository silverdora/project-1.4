@model List<Chapeau.Models.MenuItem>

<h2>Menu Items</h2>


<<form method="get" asp-controller="MenuItem" asp-action="Index" class="mb-3">
    <div class="d-flex gap-3">
        <!-- Card Filter -->
        <div>
            <label for="selectedCard">Card:</label>
            <select name="selectedCard" id="selectedCard" class="form-select" onchange="this.form.submit()">
                @foreach (var card in (List<string>)ViewBag.Cards)
                {
                    <option value="@card" selected="@(card == ViewBag.SelectedCard ? "selected" : null)">@card</option>
                }
            </select>
        </div>

        <!-- Category Filter -->
        <div>
            <label for="selectedCategory">Category:</label>
            <select name="selectedCategory" id="selectedCategory" class="form-select" onchange="this.form.submit()">
                @foreach (var category in (List<string>)ViewBag.Categories)
                {
                    <option value="@category" selected="@(category == ViewBag.SelectedCategory ? "selected" : null)">@category</option>
                }
            </select>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Item_name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("C")</td> 
                <td>@item.Category</td>
                <td>
                    @{
                        string message;
                        string color;

                        if (item.StockQuantity == 0)
                        {
                            message = "Out of stock";
                            color = "red";
                        }
                        else if (item.StockQuantity <= 10)
                        {
                            message = $"Low ({item.StockQuantity})";
                            color = "orange";
                        }
                        else
                        {
                            message = $"In stock ({item.StockQuantity})";
                            color = "green";
                        }
                    }

                    <span style="color:@color;">@message</span>
                </td>
            </tr>
        }
    </tbody>
</table>