@model Chapeau.Models.MenuItem

@{
    ViewData["Title"] = "Add Menu Item";
}

<h2>Add Menu Item</h2>

<form asp-action="Add" method="post">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="mb-3">
        <label asp-for="Item_name" class="form-label">Item Name</label>
        <input asp-for="Item_name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="VATPercent" class="form-label">VAT %</label>
        <input asp-for="VATPercent" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label">Category</label>
        <select asp-for="Category" class="form-select">
            @foreach (MenuCategory category in ViewBag.Categories)
            {
                <option value="@category">@category</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="CardID" class="form-label">Card</label>
        <select asp-for="CardID" class="form-select">
            @foreach (MenuCard card in ViewBag.Cards)
            {
                <option value="@((int)card)">@card</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Item_Type" class="form-label">Item Type</label>
        <input asp-for="Item_Type" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="StockQuantity" class="form-label">Stock Quantity</label>
        <input asp-for="StockQuantity" class="form-control" />
    </div>

    <input type="hidden" asp-for="IsActive" value="true" />

    <button type="submit" class="btn btn-success">Add</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
