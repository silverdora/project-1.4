@{
}
@model Chapeau.Models.Order

<h2>Order Details</h2>

<p><strong>Order ID:</strong> @Model.OrderID</p>
<p><strong>Table Number:</strong> @Model.Table.TableNumber</p>
<p><strong>Order Time:</strong> @Model.OrderTime.ToString("g")</p>

<h3>Order Items</h3>
<ul>
    @foreach (var item in Model.OrderItems)
    {
        <li>@item.MenuItem.Item_name - Quantity: @item.Quantity</li>
    }
</ul>

<a asp-controller="RunningOrders" asp-action="Index" class="btn btn-secondary">Back to Orders</a>

