@{
}
@model Chapeau.Models.Order

<h2>Order Details for Table @Model.Table.TableNumber</h2>

<table class="table">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Comment</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.MenuItem.Name</td>
                <td>@item.Quantity</td>
                <td>€@item.MenuItem.Price.ToString("F2")</td>
                <td>@item.Comment</td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Total Price:</strong> €@Model.TotalAmount.ToString("F2")</p>
<a asp-controller="Payment" asp-action="CompletePayment" asp-route-orderId="@Model.OrderID" class="btn btn-success">Finish & Pay</a>


<a asp-action="Index" class="btn btn-secondary">Back</a>

