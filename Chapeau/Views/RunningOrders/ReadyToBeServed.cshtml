@model Chapeau.ViewModels.ReadyToBeServedOrdersViewModel


@{
    ViewData["Title"] = "RunningOrders";
}
<h2>Ready To Be Served Orders</h2>

<div class="col mb-2" role="group">
    <a class="btn btn-light" href="/RunningOrders/Index">Running Orders</a>
    <a class="btn btn-dark" href="/RunningOrders/ReadyToBeServed">Ready To Be Served Orders</a>
</div>
<a class="btn btn-primary mb-2" href="/RunningOrders/ReadyToBeServed">Refresh</a>
@if (TempData["StatusChangeMessage"] != null)
{
    <div class="alert alert-success">@TempData["StatusChangeMessage"]</div>
}
<div class="mb-4">
    <div class="container">
        <div class="row row d-flex align-items-start">
            @{
                foreach (Order order in Model.ReadyOrders)
                {
                    var viewData = new ViewDataDictionary(ViewData){
                        { "OrdersByCourse", Model.ReadyOrdersByCourse },
                        { "CurrentStatus", Status.ReadyToBeServed },
                        { "NewStatus", Status.Served }
                    };
                    <partial name="_OrderCard" model="@order" view-data="viewData" />
                }
            }
        </div>
    </div>
</div>